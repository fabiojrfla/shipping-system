<!DOCTYPE html>
<html>
  <head>
    <title>Sistema de Frete</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application" %>
  </head>

  <body>
  <header>
    <h1>Sistema de Frete</h1>
    <nav>
      <% if admin_signed_in? %>
        <%= link_to 'Painel Administrativo', admin_root_path %> |
        <%= current_admin.name %> <%= current_admin.surname %> |
        <%= current_admin.email %> |
        <%= button_to 'Sair', destroy_admin_session_path, method: :delete %>
      <% else %>
        <%= link_to 'PÃ¡gina inicial', root_path %> |
        <%= link_to 'Rastreamento', root_path %> |
        <%= link_to 'Sou Transportadora', root_path %> |
        <%= link_to 'Sou Administrador',  new_admin_session_path %>
      <% end %>
    </nav>
  </header>
  <main>
    <div>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
    </div>
    <div>
      <%= flash[:success] %>
    </div>
    <div>
      <%= flash[:error] %>
    </div>
    <%= yield %>
  </main>
  </body>
</html>
