<div id="quote-form">
  <%= form_with model: @item do |f| %>
    <h3>Item a ser transportado</h3>
    <div>
      <%= f.label :sku %>
      <%= f.text_field :sku %>
    </div>
    <div>
      <%= f.label :height %>
      <%= f.number_field :height %>
    </div>
    <div>
      <%= f.label :width %>
      <%= f.number_field :width %>
    </div>
    <div>
      <%= f.label :length %>
      <%= f.number_field :length %>
    </div>
    <div>
      <%= f.label :weight %>
      <%= f.number_field :weight, step: 0.1 %>
    </div>
    <h3>Dist√¢ncia a ser percorrida entre origem e destino</h3>
    <div>
      <%= f.label t(:distance) %>
      <%= f.number_field t(:distance), required: true %>
    </div>
    <div>
      <%= f.submit 'Cotar' %>
    </div>
  <% end %>
</div>
